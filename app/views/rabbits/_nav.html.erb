<% content_for :nav_left do  %>
	<% if @rabbit.kind_of? RaceRabbit %>
  	<li><%= icon_link_to "arrow_back", cages_path %></li>
	<% else %>
  	<li><%= icon_link_to "arrow_back", cage_path(rabbit.cage) %></li>
	<% end %>
<% end %>
<% content_for :nav_right do  %>
  <li class="dropdown">
    <%= icon_link_to "more_vert", "#", class: "dropdown-toggle", data: { toggle: "dropdown" } %>
    <ul class="dropdown-menu">
      <li><%= link_to "Modifica", edit_rabbit_path(rabbit) %></li>
      <li><%= link_to "Elimina", rabbit_path(rabbit), :method => :delete, data: { confirm: "Sicuro di voler eliminare questo coniglio?" } %></li>
    </ul>
  </li>
<% end %>
