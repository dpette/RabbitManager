<%= render "rabbits/nav", rabbit: @rabbit %>

<h1><%= @rabbit.name_or_position %></h1>


<div class="list-group rabbit-details">
  <div class="list-group-item">
    <div class="row-content">
      <h4 class="list-group-item-heading">Giorni</h4>
      <div class="least-content"><%= @rabbit.age %></div>
    </div>
  </div>
  <div class="list-group-separator"></div>
  <div class="list-group-item">
    <div class="row-content">
      <h4 class="list-group-item-heading">Sesso</h4>
      <div class="least-content"><%= t("gender.#{@rabbit.gender || "unknown_gender"}") %></div>
    </div>
  </div>
  <div class="list-group-separator"></div>
  <a href="<%= rabbit_weights_path(@rabbit) %>" class="list-group-item">
    <div class="row-content">
      <h4 class="list-group-item-heading">Peso</h4>
      <div class="least-content"><%= @rabbit.last_weight ? "#{@rabbit.last_weight} kg" : "Nessuno" %></div>
      <div class="action-secondary"><i class="material-icons">chevron_right</i></div>
    </div>
  </a>
  <div class="list-group-separator"></div>
  <a href="<%= edit_notes_rabbit_path(@rabbit) %>" class="list-group-item">
    <div class="row-content">
      <h4 class="list-group-item-heading">Note</h4>
      <p class="list-group-item-text"><%= @rabbit.notes %></p>

      <div class="action-secondary"><i class="material-icons">chevron_right</i></div>
    </div>
  </a>
  <div class="list-group-separator"></div>
  <% if @rabbit.mother? && @rabbit.pregnant? %>
  <div class="list-group-item">
    <div class="row-content">
      <h4 class="list-group-item-heading">Concepimento</h4>
      <div class="least-content"><%= @rabbit.days_from_conception %> giorni</div>
    </div>
  </div>
  <div class="list-group-separator"></div>
  <% end %>
</div>

<% if !@rabbit.weights.last || @rabbit.weights.last.registered_on < Date.today %>
  <%= link_to "Pesa", new_rabbit_weight_path(@rabbit), class: "btn btn-primary btn-block btn-lg" %>
<% end %>
<%#= link_to "Sposta", new_rabbit_weight_path(@rabbit), class: "btn btn-primary btn-block btn-lg" %>
<%= link_to "Uccidi", kill_rabbit_path(@rabbit), method: :put, class: "btn btn-primary btn-block btn-lg", data: { confirm: "I conigli non ritornano piÃ¹ in vita"} %>
<% if @rabbit.mother? %>
  <%= link_to "Registra Parto", new_birth_rabbit_path(@rabbit), class: "btn btn-primary btn-block btn-lg" %>
  <% if !@rabbit.pregnant? %>
    <%= link_to "Ingravida", new_conception_rabbit_path(@rabbit), class: "btn btn-primary btn-block btn-lg" %>
  <% end %>
<% end %>
