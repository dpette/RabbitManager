<%= render "rabbits/nav", rabbit: @rabbit %>

<h1><%= @rabbit.name.present? ? @rabbit.name : "Madre per #{@rabbit.cage.code}"  %></h1>


<div class="row">
  <div class="small-12-col">
    <div class="general_details">
      <div class="gender <%= @rabbit.gender %>"><%= @rabbit.gender %></div>
      <div class="age"><%= pluralize(@rabbit.age, "giorno", "giorni") %></div>
      <% if @rabbit.last_weight %>
        <div class="last_weight"><%= @rabbit.last_weight %>Kg</div>
      <% end %>

      <%= link_to "Pesa", new_rabbit_weight_path(@rabbit), class: "btn btn-primary btn-block btn-lg" %>
      <%= link_to "Sposta", new_rabbit_weight_path(@rabbit), class: "btn btn-primary btn-block btn-lg" %>
      <%= link_to "Uccidi", new_rabbit_weight_path(@rabbit), class: "btn btn-primary btn-block btn-lg" %>
      <%= link_to "Registra Parto", new_rabbit_weight_path(@rabbit), class: "btn btn-primary btn-block btn-lg" %>

    </div>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th class="text-center">Et√† (giorni)</th>
          <th class="text-center">Peso (Kg)</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @weights.each do |weight| %>
          <tr class="text-center">
            <td><%= (weight.registered_on - @rabbit.birth_date).to_i %></td>
            <td><%= weight.value %></td>
            <td><%= icon_link_to "edit", edit_weight_path(weight) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
