<% content_for :nav_right do  %>
  <li class="dropdown">
    <%= icon_link_to "more_vert", "#", class: "dropdown-toggle", data: { toggle: "dropdown" } %>
    <ul class="dropdown-menu">
      <%= render "devise/shared/links" %>
    </ul>
  </li>
<% end %>

<%= bootstrap_devise_error_messages! %>
<h1><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h1>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "btn btn-primary btn-block btn-lg" %>
<% end %>