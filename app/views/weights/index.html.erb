<% content_for :nav_left do  %>
  <li><%= icon_link_to "arrow_back", rabbit_path(@rabbit) %></li>
<% end %>

<h1>Pesi per <%= @rabbit.position %></h1>

<% if !@weights.first || @weights.first.registered_on < Date.today %>
  <%= link_to "Agiungi peso", new_rabbit_weight_path(@rabbit), class: "btn btn-primary btn-raised btn-lg btn-block" %>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th class="text-center">EtÃ  (giorni)</th>
      <th class="text-center">Peso (Kg)</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if @weights.empty? %>
      <tr class="text-center">
        <td colspan="3">Nessun peso registrato</td>
      </tr>
    <% else %>
      <% @weights.each do |weight| %>
        <tr class="text-center">
          <td><%= (weight.registered_on - @rabbit.birth_date).to_i %></td>
          <td><%= weight.value %></td>
          <td><%= icon_link_to "edit", edit_weight_path(weight) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

